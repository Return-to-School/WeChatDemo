<!--pages/persomInfo/personInfo.wxml-->

<!-- 顶部logo -->
<view class='logo' style='background-image:url("/images/logo.gif")'></view>

<!-- 账号与密码表单 -->
<wxc-input type="text" title="学号" type="number" placeholder="输入学号" value='{{account}}' bindinput="inputedit" data-type="account"></wxc-input>
<wxc-input type="text" title="密码" password="true" placeholder="输入密码" value="{{password}}" bindinput="inputedit" data-type="password"></wxc-input>

<!-- 登录与注册按钮 -->
<view class='bt'>
<wxc-button size="large" value="登录" btnStyle="margin-top:15px;background-color:#B7D3AB" bindtap='toLogin'></wxc-button>
<wxc-button size="large" value="注册" btnStyle="margin-top:15px;background-color:#B7D3AB" bindtap="toRejister"></wxc-button>
</view>