<!--pages/activedetail/activedetail.wxml-->

<!-- 标题 -->
<view class='title'>
  <view class='name'>{{active.name}}</view>
  <view class='state'>报名审核中</view>
</view>

<!-- 地点 -->
<view class="small-title">(活动信息)</view>
<view class='info'>
  <view>地点</view>
  <view>{{active.location}}</view>
</view>
<!-- 创建人 -->
<view class='info'>
  <view>创建人</view>
  <view>{{active.creator}}</view>
</view>
<!-- 时间 -->
<view class='info' >
  <view>活动开始时间</view>
  <view>{{active.applyStartTime}}</view>
</view>

<view class='info'>
  <view>活动结束时间</view>
  <view>{{active.applyStartTime}}</view>
</view>

<view class='info'>
  <view>反馈开始时间</view>
  <view>{{active.applyStartTime}}</view>
</view>

<view class='info'>
  <view>反馈结束时间</view>
  <view>{{active.applyStartTime}}</view>
</view>

<!-- 内容 -->
<view class="small-title">(活动内容)</view>
<view class='content'>
  {{active.content}}
</view>



<!-- 预约与文件下载按钮 -->
<view class="bt">
  <wxc-button size="normal" type="selection" value="预约"></wxc-button>
   <wxc-button size="normal" type="selection" value="下载文件"></wxc-button>
</view>