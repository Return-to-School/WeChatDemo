/* pages/activedetail/activedetail.wxss */
page{
  background-color: #f6f6f6;
}
.title{
  background-color: #fff;
  padding: 15px;

}
.name{
  font-size: 1.5em;
  font-weight:600;
  color: #333;
  padding: 0 0 15px 0;
}
.state{
  color: #333;
}

.content{
  padding: 10px;
  text-indent: 2em;
  word-break: break-all;
  background-color: #fff;
  font-size: 1.2em;
  line-height: 1.6em;
}

.bt{
  margin: 10px 0;
  padding: 10px 0;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}

.info{
  background-color: #fff;
  padding: 5px;
  display: flex;
}

.info view{
  width: 50%;
  color: #333;
  display: flex;
  align-items: center;
}

.small-title{
  font-size: 0.8em;
  color:#444;
  margin: 5px;
}

.no-feedback{
  background-color:#fff;
  color:#5Ac837;
  padding:5px;  
}
.popup__content {
  width: 100%;
  height: 500rpx;
  line-height: 500rpx;
  background: #ffffff;
  text-align: center;
}

